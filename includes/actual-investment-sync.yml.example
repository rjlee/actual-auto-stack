services:
  actual-investment-sync:
    image: ghcr.io/rjlee/actual-investment-sync:${ACTUAL_IMAGE_TAG:-latest}
    container_name: actual-investment-sync
    env_file:
      - ../.env
      - ../env/actual-investment-sync.env
    environment:
      BUDGET_DIR: /app/data/budget
      HTTP_PORT: ${INVEST_SYNC_HTTP_PORT}
      AUTH_COOKIE_NAME: ${INVEST_SYNC_AUTH_COOKIE_NAME:-actual-auth}
    restart: unless-stopped
    depends_on:
      actual-events:
        condition: service_healthy
    volumes:
      - type: bind
        source: ../state/actual-investment-sync
        target: /app/data
    networks:
      - default
      - proxy
    logging:
      driver: json-file
      options:
        max-size: "10m"
        max-file: "3"
    labels:
      - traefik.enable=true
      - traefik.docker.network=actual-auto-stack_proxy
      - traefik.http.routers.investment.rule=PathPrefix(`/investment`)
      - traefik.http.routers.investment.entrypoints=web
      - traefik.http.routers.investment.middlewares=investment-chain@docker
      - traefik.http.services.investment.loadbalancer.server.port=${INVEST_SYNC_HTTP_PORT:-3000}
      - traefik.http.middlewares.investment-static-headers.headers.customrequestheaders.X-Actual-App-Name=${INVEST_SYNC_LOGIN_NAME:-actual-investment-sync}
      - traefik.http.middlewares.investment-static-headers.headers.customrequestheaders.X-Actual-Cookie-Name=${INVEST_SYNC_AUTH_COOKIE_NAME:-actual-auth}
      - traefik.http.middlewares.investment-forwardauth.forwardauth.address=http://actual-auto-auth:4000/check
      - traefik.http.middlewares.investment-forwardauth.forwardauth.trustForwardHeader=true
      - traefik.http.middlewares.investment-forwardauth.forwardauth.authResponseHeaders=Set-Cookie
      - "traefik.http.middlewares.investment-forwardauth.forwardauth.authRequestHeaders=X-Actual-App-Name,X-Actual-Cookie-Name,X-Forwarded-Host,X-Forwarded-Proto,Cookie"
      - traefik.http.middlewares.investment-trim.stripprefix.prefixes=/investment
      - traefik.http.middlewares.investment-chain.chain.middlewares=investment-static-headers@docker,investment-forwardauth@docker,investment-trim@docker

# When enabling this include:
#   • Update `env/actual-investment-sync.env` with, for example:
#       INVEST_SYNC_LOGIN_NAME=actual-investment-sync
#       INVEST_SYNC_AUTH_COOKIE_NAME=actual-auth
#   • Add the matching shortcut to `env/actual-auto-auth.env`, for example:
#       STACK_LINK_ACTUAL_INVESTMENT_SYNC=/investment/
#       STACK_LABEL_ACTUAL_INVESTMENT_SYNC=actual-investment-sync
# This keeps the UI headers aligned and the shared auth landing page aware of the service.

services:
  actual-investment-sync:
    image: ghcr.io/rjlee/actual-investment-sync:${ACTUAL_IMAGE_TAG:-latest}
    container_name: actual-investment-sync
    env_file:
      - ../.env
      - ../env/actual-investment-sync.env
    environment:
      BUDGET_DIR: /app/data/budget
      HTTP_PORT: ${INVEST_SYNC_HTTP_PORT}
    ports:
      - "${INVEST_SYNC_HTTP_PORT:-3000}:${INVEST_SYNC_HTTP_PORT:-3000}"
    restart: unless-stopped
    depends_on:
      actual-events:
        condition: service_healthy
    volumes:
      - type: bind
        source: ../state/actual-investment-sync
        target: /app/data
    logging:
      driver: json-file
      options:
        max-size: "10m"
        max-file: "3"

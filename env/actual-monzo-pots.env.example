# Copy to actual-monzo-pots.env and fill values specific to actual-monzo-pots

# Optional: override shared Actual connection (otherwise inherited from stack/.env)
ACTUAL_SERVER_URL=
ACTUAL_PASSWORD=
ACTUAL_SYNC_ID=
ACTUAL_BUDGET_ENCRYPTION_PASSWORD=

# Web UI / server
HTTP_PORT=
MONZO_AUTH_COOKIE_NAME=monzo-auth
MONZO_LOGIN_NAME=Actual Monzo Pots
LOG_LEVEL=info

# Monzo OAuth
CLIENT_ID=
CLIENT_SECRET=
# Set to the externally accessible callback (e.g. https://stack.example.com/monzo/auth/callback)
REDIRECT_URI=
MONZO_SCOPES=openid accounts:read pots:read

# Monzo endpoints (defaults are provided by the app; override only if needed)
MONZO_AUTH_ENDPOINT=https://auth.monzo.com
MONZO_API_ENDPOINT=https://api.monzo.com
MONZO_TOKEN_PATH=/oauth2/token

# Token storage
TOKEN_DIRECTORY=/app/data

# Budget cache lives under /app/data/budget (set by stack). Override only if needed.
# BUDGET_DIR=/app/data/budget

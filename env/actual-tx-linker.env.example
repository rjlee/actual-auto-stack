# Copy to actual-tx-linker.env and fill values specific to actual-tx-linker

# Optional: override shared Actual connection (otherwise inherited from stack/.env)
ACTUAL_SERVER_URL=
ACTUAL_PASSWORD=
ACTUAL_SYNC_ID=
ACTUAL_BUDGET_ENCRYPTION_PASSWORD=

# Linker behavior
DRY_RUN=true
LOOKBACK_DAYS=14
WINDOW_HOURS=72
MIN_SCORE=0.2
INCLUDE_ACCOUNTS=
EXCLUDE_ACCOUNTS=
PAIR_MULTIPLES=true
DELETE_DUPLICATE=true
MERGE_NOTES=true
KEEP=outgoing
CLEARED_ONLY=true
SKIP_RECONCILED=true
PREFER_RECONCILED=true
LOG_LEVEL=info

# Cron scheduling (alternative to INTERVAL_MINS)
DISABLE_CRON_SCHEDULING=false
LINK_CRON=0 * * * *
LINK_CRON_TIMEZONE=UTC

# Event-based triggers (optional)
ENABLE_EVENTS=false
EVENTS_URL=http://actual-events:4000/events
EVENTS_AUTH_TOKEN=

# Budget cache lives under /app/data/budget (set by stack). Override only if needed.
# BUDGET_DIR=/app/data/budget
